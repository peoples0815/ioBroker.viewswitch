{
    "type": "tabs",
    "items": {
      "voice": {
        "type": "panel",
        "label": "Voice",
        "items": {
          "engine": {
            "type": "selectSendTo",
            "label": "Engine",
            "sm": 2,
            "command": "getEngines",
            "alsoDependsOn": ["language"],
            "jsonData": "{\"language\":  \"${data.language}\"}"
          },
          "language": {
            "type": "selectSendTo",
            "label": "Language",
            "sm": 2,
            "command": "getLanguages",
            "alsoDependsOn": ["engine"],
            "jsonData": "{\"engine\":  \"${data.engine}\"}"
          },
          "voice": {
            "newLine": true,
            "type": "selectSendTo",
            "label": "Voice",
            "sm": 2,
            "hidden": "data.engine === 'google' || data.engine === 'PicoTTS'",
            "command": "getVoices",
            "alsoDependsOn": ["language", "engine"],
            "jsonData": "{\"engine\":  \"${data.engine}\", \"language\": \"${data.language}\"}"
          },
          "vocoder": {
            "type": "selectSendTo",
            "label": "Vocoder",
            "sm": 2,
            "hidden": "data.engine !== 'coquiTTS'",
            "command": "getVocoders",
            "jsonData": "{\"engine\":  \"${data.engine}\", \"language\": \"${data.language}\"}"
          },
          "cloudAPIkey": {
            "type": "text",
            "label": "Cloud API Key",
            "sm": 2,
            "hidden": "data.engine !== 'cloud'"
          },
          "accessKey": {
            "newLine": true,
            "type": "text",
            "label": "Access Key",
            "hidden": "data.engine !== 'polly' && data.engine !== 'yandexCloud'"
          },
          "secretKey": {
            "type": "text",
            "label": "Secret Key",
            "hidden": "data.engine !== 'polly'"
          },
          "region": {
            "newLine": true,
            "type": "text",
            "label": "Region",
            "hidden": "data.engine !== 'polly'"
          },
          "folderID": {
            "type": "text",
            "label": "Folder ID",
            "hidden": "data.engine !== 'yandexCloud'"
          },
          "emotion": {
            "newLine": true,
            "type": "select",
            "label": "Emotion",
            "sm": 1,
            "hidden": "data.engine !== 'yandexCloud'",
            "options": [
              {"label":  "Good", "value": "good"},
              {"label": "Neutral", "value": "neutral"},
              {"label":  "Evil", "value": "evil"}
            ]
          }
        }
      },
      "output": {
        "type": "panel",
        "label": "Output",
        "items": {
          "type": {
            "type": "select",
            "label": "Type",
            "sm": 2,
            "options": [
              {
                "label": "Browser",
                "value": "browser"
              },
              {
                "label": "Chromecast",
                "value": "chromecast"
              },
              {
                "label": "Google Home",
                "value": "googleHome"
              },
              {
                "label": "HEOS",
                "value": "heos"
              },
              {
                "label": "MediaPlayer24",
                "value": "mp24"
              },
              {
                "label": "MediaPlayer24+FTP",
                "value": "mp24ftp"
              },
              {
                "label": "MPD",
                "value": "mpd"
              },
              {
                "label": "Sonos",
                "value": "sonos"
              },
              {
                "label": "System",
                "value": "system"
              },
              {
                "label": "Windows default",
                "value": "windows"
              }
            ]
          },
          "player": {
            "newLine": true,
            "type": "select",
            "label": "Player",
            "hidden": "data.type !== 'system'",
            "options": [
              {"label":  "Custom", "value": "custom"},
              {"label": "mpg321", "value": "mpg321"},
              {"label":  "OMXPlayer", "value": "omxplayer"},
              {"label":  "MPlayer", "value": "mplayer"}
             ]
          },
          "command": {
            "type": "text",
            "label": "System command",
            "hidden": "data.type !== 'system' || data.player !== 'custom'"
          },
          "instance": {
            "newLine": true,
            "type": "text",
            "label": "Browser instance",
            "hidden": "data.type !== 'browser'"
          },
          "server": {
            "newLine": true,
            "type": "text",
            "label": "Server IP",
            "hidden": "data.type !== 'mp24ftp' && data.type !== 'mp24' && data.type  !== 'googleHome'"
           },
          "port": {
            "type": "number",
            "label": "Port",
            "hidden": "data.type !== 'mp24ftp'"
          },
          "device": {
            "newLine": true,
            "type": "selectSendTo",
            "label": "Device",
            "sm": 2,
            "command": "getDevices",
            "alsoDependsOn": ["type"],
            "hidden": "data.type !== 'sonos' && data.type !== 'mpd' && data.type !== 'heos' && data.type !== 'chromecast' && data.type !== 'googleHome'",
            "jsonData": "{\"type\":  \"${data.type}\"}"
          },
          "web": {
            "type": "selectSendTo",
            "label": "Web instance",
            "sm": 2,
            "command": "getWebInstances",
            "alsoDependsOn": ["type"],
            "hidden": "data.type !== 'sonos' && data.type !== 'mpd' && data.type !== 'heos' && data.type !== 'chromecast' && data.type !== 'googleHome'",
            "jsonData": "{\"adapter\":  \"${data.type}\"}"
          },
          "webServer": {
            "type": "selectSendTo",
            "label": "Web Server IP",
            "sm": 2,
            "command": "getWebServers",
            "alsoDependsOn": ["web"],
            "hidden": "data.type !== 'sonos' && data.type !== 'mpd' && data.type !== 'heos' && data.type !== 'chromecast' && data.type !== 'googleHome'",
            "jsonData": "{\"web\":  \"${data.web}\"}"
          }
        }
      },
      "announcment": {
        "type": "panel",
        "label": "Announcement",
        "items": {
          "announce": {
            "type": "selectSendTo",
            "label": "Sound",
            "sm": 2,
            "command": "getAnnouncementSounds"
          },
          "annoTimeout": {
            "newLine": true,
            "type": "number",
            "label": "Announcment Timeout"
          },
          "annoDuration": {
            "type": "number",
            "label": "Announcment Duration"
          },
          "annoVolume": {
            "type": "number",
            "label": "Announcement Volume"
          }
        }
      }
    }
  }
  